{
  "name": "takify-electron",
  "version": "1.0.0",
  "description": "Electron configuration for WeboChat",
  "keywords": [
    "electron",
    "takify",
    "js"
  ],
  "license": "MIT",
  "author": "Divyesh Moraniya",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "electronmon": "^2.0.3",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.takify.desktop",
    "productName": "Takify",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"                 
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Takify",
      "installerIcon": "build/icon.ico",        
      "uninstallerIcon": "build/icon.ico",      
      "installerHeaderIcon": "build/icon.ico"  
    }
  }
}
